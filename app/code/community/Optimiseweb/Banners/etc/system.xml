<config>

    <tabs>
        <optimisewebconfig translate="label comment" module="banners">
            <label>Optimise Web</label>
            <sort_order>0</sort_order>
        </optimisewebconfig>
    </tabs>

    <sections>
        
        <optimisewebbanners translate="label comment" module="banners">
            <label>Banners</label>
            <tab>optimisewebconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>99999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>

                <retina translate="label comment" module="banners">
                    <label>Image for Retina Displays</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label tooltip comment" module="banners">
                            <label>Enable?</label>
                            <tooltip>Retina images can be uploaded, but the Banner output will not implement it.</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <dataattribute translate="label tooltip comment" module="banners">
                            <label>Data Attribute</label>
                            <tooltip>Defaults to 'data-2x'.</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dataattribute>
                    </fields>
                </retina>

            </groups>
        </optimisewebbanners>
        
    </sections>
    
</config>